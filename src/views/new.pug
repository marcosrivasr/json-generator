
include header
if error
    .class= error
div(class="container col-2")
    form(action="/actions/create", method="POST", class="col")
        h3 Response
        
        if src
            textarea( name="data", cols="30", rows="10", autocomplete="off")=src
        else
            textarea(name="data", cols="30", rows="10", autocomplete="off")

        div
            input(type="submit", value="Crear")

    form(action="/actions/save", method="POST", class="col")
        h3 Response
        label(for="name", required) Name of dataset
        if name
            input(type="text", name="name", autocomplete="off", value=name)
        else
            input(type="text", name="name", autocomplete="off")
        if src
            input(type="hidden",  name="src", value=src)
        else
            input(type="hidden", name="src", value=src)
        if result
            textarea(name="data",id="response", cols="30", rows="10")=result
        else
            textarea(name="data",id="response")
        
        input(type="submit", value="Guardar")